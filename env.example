# Configuración de la aplicación
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
API_PORT=8080

# JWT
JWT_SECRET=your-super-secret-jwt-key-with-at-least-32-characters
JWT_ISSUER=PlantillaMicroServicio
JWT_AUDIENCE=PlantillaMicroServicio
JWT_DURATION_MINUTES=60
JWT_CLOCK_SKEW_MINUTES=2
JWT_VALIDATE_ISSUER=true
JWT_VALIDATE_AUDIENCE=true
JWT_REQUIRE_EXPIRATION=true
JWT_VALIDATE_LIFETIME=true

# Logging
SERILOG_LEVEL=Information
SERILOG_FILE_PATH=/app/logs/app-.log
SERILOG_SEQ_URL=http://seq:5341
SEQ_PORT=5341

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Seguridad
ENABLE_HTTPS_REDIRECTION=false
ENABLE_HEALTH_CHECKS=true

# Métricas
METRICS_ENDPOINT=/metrics
PROMETHEUS_ENABLED=true

# Docker
RUNTIME_VERSION=8.0
BUILD_CONFIGURATION=Release

# Producción
NGINX_PORT=80
NGINX_SSL_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123
API_REPLICAS=2
LOG_PATH=./logs
DATA_PATH=./data

# KESTREL
ASPNETCORE_KESTREL_MAX_CONNECTIONS=100
ASPNETCORE_KESTREL_MAX_WEBSOCKET=100
ASPNETCORE_KESTREL_MAX_BODY_SIZE=52428800

# MONITORING
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# DEVELOPMENT
ENABLE_SWAGGER=true
ENABLE_DETAILED_LOGS=true

# PRODUCTION
ENABLE_COMPRESSION=true

# MONITORING PORTS
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123
NGINX_PORT=80
NGINX_SSL_PORT=443

# SCALING
API_REPLICAS=2

# PATHS
LOG_PATH=./logs
DATA_PATH=./data

# BUILD
RUNTIME_VERSION=8.0
BUILD_CONFIGURATION=Release 